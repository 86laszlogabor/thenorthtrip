// components/PartnerGrid.tsx
import TrackedExternal from "@/components/TrackedExternal";
import { PARTNERS, type PartnerKey } from "@/lib/partners";

type Props = {
  partnerKeys: PartnerKey[];
  placement: string;
  ctaLabel?: string;
  className?: string;
};

export default function PartnerGrid({ partnerKeys, placement, ctaLabel = "Check options", className }: Props) {
  const partners = partnerKeys
    .map((k) => PARTNERS[k])
    .filter(Boolean);

  return (
    <div className={["grid gap-4 sm:grid-cols-2 lg:grid-cols-3", className ?? ""].join(" ")}>
      {partners.map((p) => {
        const href = p.href ?? "#";
        const isLive = p.status === "live" && href !== "#";

        return (
          <div
            key={p.key}
            className="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm"
          >
            <div className="flex items-start justify-between gap-3">
              <div>
                <div className="text-sm font-semibold text-slate-900">{p.name}</div>
                {p.blurb ? (
                  <div className="mt-1 text-sm text-slate-600">{p.blurb}</div>
                ) : null}
              </div>

              <div className="shrink-0 rounded-full bg-slate-100 px-2 py-1 text-xs font-semibold text-slate-700">
                {isLive ? "Live" : "Soon"}
              </div>
            </div>

            {p.longBlurb ? (
              <p className="mt-3 text-sm leading-relaxed text-slate-700">{p.longBlurb}</p>
            ) : null}

            {p.note ? (
              <p className="mt-3 text-xs leading-relaxed text-slate-500">{p.note}</p>
            ) : null}

            <div className="mt-4 flex flex-wrap items-center gap-3">
              <TrackedExternal
                href={href}
                placement={placement as any}
                cta={`partner_${p.key}` as any}
                className={[
                  "inline-flex items-center justify-center rounded-xl px-4 py-2 text-sm font-semibold transition",
                  isLive
                    ? "bg-orange-500 text-black hover:bg-orange-600"
                    : "bg-slate-100 text-slate-500 cursor-not-allowed",
                ].join(" ")}
              >
                {ctaLabel}
              </TrackedExternal>

              <span className="text-xs text-slate-500">
                {p.disclosure === "sponsored" ? "Sponsored" : "Info"}
              </span>
            </div>
          </div>
        );
      })}
    </div>
  );
}
